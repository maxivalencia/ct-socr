{% extends "ct/ct.html.twig" %}

{% block title %}Professions - Details{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="row justify-content-center align-items-center kl-sous-titre">
            <h1>Professions</h1>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ profession.id }}</td>
                </tr>
                <tr>
                    <th>Profession</th>
                    <td>{{ profession.profession }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('professions_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour vers la liste</a>
        <br><br>
        <a href="{{ path('professions_edit', {'id': profession.id}) }}" class="btn btn-success"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier</a>
        <br><br>
        {{ include('professions/_delete_form.html.twig') }}
    </div>
{% endblock %}
