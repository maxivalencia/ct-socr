<form method="post" action="{{ path('controles_delete', {'id': controle.id}) }}" onsubmit="return confirm('Êtes-vous sûre de vouloir retirer cette dossier?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ controle.id) }}">
    <button class="btn btn-danger kl-bouton"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</button>
</form>
