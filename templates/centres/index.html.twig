{% extends "ct/ct.html.twig" %}

{% block title %}Centres - Vision{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="row justify-content-center align-items-center kl-sous-titre">
            <h1>Liste des centres</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Centre</th>
                    <th>Code</th>                    
                    <th>Province</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for centre in centres %}
                <tr>
                    <td>{{ centre.id }}</td>
                    <td>{{ centre.centre }}</td>
                    <td>{{ centre.code }}</td>
                    <td>{{ centre.province }}</td>
                    <td>
                        <a href="{{ path('centres_show', {'id': centre.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                        <a href="{{ path('centres_edit', {'id': centre.id}) }}" class="btn btn-danger"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun enregistrement trouver</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('centres_new') }}" class="btn btn-primary kl-bouton"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter un centre</a>
    </div>
{% endblock %}
