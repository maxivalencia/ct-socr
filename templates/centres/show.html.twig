{% extends "ct/ct.html.twig" %}

{% block title %}Centres - Details{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="row justify-content-center align-items-center kl-sous-titre">
            <h1>Centres</h1>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ centre.id }}</td>
                </tr>
                <tr>
                    <th>Centre</th>
                    <td>{{ centre.centre }}</td>
                </tr>
                <tr>
                    <th>Code</th>
                    <td>{{ centre.code }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('centres_index') }}" class="btn btn-primary kl-bouton"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour vers la liste</a>
        <br><br>
        <a href="{{ path('centres_edit', {'id': centre.id}) }}" class="btn btn-success kl-bouton"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier</a>
        <br><br>
        {{ include('centres/_delete_form.html.twig') }}
    </div>
{% endblock %}
