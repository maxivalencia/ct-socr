{% extends "ct/ct.html.twig" %}

{% block title %}Anomalie - Details{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="row justify-content-center align-items-center kl-sous-titre">
            <h1>Anomalies</h1>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ anomaly.id }}</td>
                </tr>
                <tr>
                    <th>Anomalie</th>
                    <td>{{ anomaly.anomalie }}</td>
                </tr>
                <tr>
                    <th>Code_anomalie</th>
                    <td>{{ anomaly.codeAnomalie }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('anomalies_index') }}" class="btn btn-primary kl-bouton"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour vers la liste</a>
        <br><br>
        <a href="{{ path('anomalies_edit', {'id': anomaly.id}) }}" class="btn btn-success kl-bouton"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier</a>
        <br><br>
        {{ include('anomalies/_delete_form.html.twig') }}
    </div>
{% endblock %}
