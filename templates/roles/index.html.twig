{% extends "ct/ct.html.twig" %}

{% block title %}Contr√¥le Technique - Role - Vision{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="row justify-content-center align-items-center kl-sous-titre">
            <h1>Liste des roles</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Role</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for role in roles %}
                <tr>
                    <td>{{ role.id }}</td>
                    <td>{{ role.role }}</td>
                    <td>
                        <a href="{{ path('roles_show', {'id': role.id}) }}" class="btn btn-success">Voir</a>
                        <a href="{{ path('roles_edit', {'id': role.id}) }}" class="btn btn-danger">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouver</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('roles_new') }}" class="btn btn-primary">Ajouter un nouveau role</a>
    </div>
{% endblock %}
