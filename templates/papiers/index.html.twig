{% extends "ct/ct.html.twig" %}

{% block title %}Papiers - Vision{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="row justify-content-center align-items-center kl-sous-titre">
            <h1>Liste des Papiers</h1>
        </div>

        <table id="table_liste" class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Papier</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for papier in papiers %}
                <tr>
                    <td>{{ papier.id }}</td>
                    <td>{{ papier.papier }}</td>
                    <td>
                        <a href="{{ path('papiers_show', {'id': papier.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                        <a href="{{ path('papiers_edit', {'id': papier.id}) }}" class="btn btn-danger"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouver</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('papiers_new') }}" class="btn btn-primary kl-bouton"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter un papier</a>
    </div>
{% endblock %}
