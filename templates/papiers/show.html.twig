{% extends "ct/ct.html.twig" %}

{% block title %}Papiers - Details{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="row justify-content-center align-items-center kl-sous-titre">
            <h1>Papiers</h1>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ papier.id }}</td>
                </tr>
                <tr>
                    <th>Papier</th>
                    <td>{{ papier.papier }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('papiers_index') }}" class="btn btn-primary kl-bouton"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour vers la liste</a>
        <br><br>
        <a href="{{ path('papiers_edit', {'id': papier.id}) }}" class="btn btn-success kl-bouton"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier</a>
        <br><br>
        {{ include('papiers/_delete_form.html.twig') }}
    </div>
{% endblock %}
