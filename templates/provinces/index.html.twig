{% block contenue %}
    <div class="container">
        <div class="row">
            <h1>Provinces index</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Province</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for province in provinces %}
                <tr>
                    <td>{{ province.id }}</td>
                    <td>{{ province.province }}</td>
                    <td>
                        <a href="{{ path('provinces_show', {'id': province.id}) }}">show</a>
                        <a href="{{ path('provinces_edit', {'id': province.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('provinces_new') }}">Ajouter un nouveau province</a>
    </div>
{% endblock %}
